<h2>User Profile</h2>

<dl class="dl-horizontal">
  <dt><strong>Name</strong></dt>
  <dd><%= @user.full_name %></dd>
  <dt><strong>Email</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user.stocks.count > 0 %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">User is not currently tracking stocks.</p>
<% end %>