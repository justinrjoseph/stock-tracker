<% if @user_stocks.any? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ticker</th>
      <th>Current Price</th>
      <% if @user == current_user %>
      <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.ticker %></td>
        <td><%= stock.price %></td>
        <% if @user == current_user %>
        <td><%= link_to 'Delete', user_stock_path(stock), class: 'btn btn-xs btn-danger', method: :delete, data: { confirm: "Do you really want to delete your #{stock.ticker} stock?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>